{
  "name": "phoenix-config",
  "version": "1.0.0",
  "description": "Configuration for kasper/phoenix written in TypeScript",
  "author": "Hady Osman",
  "license": "MIT",
  "main": "src/phoenix.ts",
  "scripts": {
    "start": "yarn run watch",
    "watch": "webpack --watch --config webpack.prod.js",
    "watch-dev": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "tslint src/**/*.ts && eslint . --ext .ts",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "rxjs": "^7.6.0",
    "typescript": "^4.9.4"
  },
  "devDependencies": {
    "@types/phoenix": "github:mafredri/phoenix-typings#main",
    "prettier": "^3.0.1",
    "ts-loader": "^9.4.2",
    "tslint": "^6.1.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0",
    "webpack-symlink-plugin": "^1.0.1"
  },
  "keywords": [
    "phoenix",
    "typescript"
  ],
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true
  }
}
